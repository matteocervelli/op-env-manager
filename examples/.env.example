# Example .env file for testing op-env-manager
# This file demonstrates common environment variable patterns

# Application Configuration
APP_NAME=my-application
APP_ENV=development
APP_DEBUG=true
APP_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/myapp
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=myapp
DATABASE_USER=myapp_user
DATABASE_PASSWORD=change-me-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys and Secrets
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-32-bytes

# Third-Party Services
STRIPE_API_KEY=sk_test_example
STRIPE_WEBHOOK_SECRET=whsec_example
SENDGRID_API_KEY=SG.example
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=my-app-uploads

# OAuth Configuration
GOOGLE_CLIENT_ID=example.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=example-secret
GITHUB_CLIENT_ID=example-client-id
GITHUB_CLIENT_SECRET=example-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@example.com

# Monitoring and Analytics
SENTRY_DSN=https://example@sentry.io/123456
DATADOG_API_KEY=example-api-key
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Feature Flags
FEATURE_NEW_UI=true
FEATURE_BETA_ACCESS=false
MAINTENANCE_MODE=false

# CORS and Security
CORS_ORIGINS=http://localhost:3000,https://example.com
ALLOWED_HOSTS=localhost,example.com
CSRF_TRUSTED_ORIGINS=https://example.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# External URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=https://api.example.com

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXX
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/example

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600
COOKIE_SECURE=false

# Worker Configuration
WORKER_CONCURRENCY=4
QUEUE_NAME=default
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Development Tools
HOT_RELOAD=true
SOURCE_MAPS=true
PROFILING_ENABLED=false
